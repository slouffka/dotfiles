#!/bin/bash
# ------------------------------------------------------------------
#
#     Scripts/mailcount
#     Description: Script for checking the number of unread mails
#     Author: Alex SÃ¡nchez <kniren@gmail.com>
#
# ------------------------------------------------------------------

MAILDIR="$HOME/.mail/gmail/Inbox/new"
ICON="mail.xbm"
NUMBER=`find $MAILDIR -type f | wc -l`

ICON='^i(/home/alex/.xmonad/dzen/icons/xbm8x8/'"$ICON)"
echo "$ICON $NUMBER"
